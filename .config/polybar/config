[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

blue = #0a81f5

[bar/mybar]
monitor = ${env:MONITOR:DVI-D-0}
width = 100%
height = 20
;offset-x = 1%
offset-y = 0%
radius = 0
fixed-center = false
separator = | 

